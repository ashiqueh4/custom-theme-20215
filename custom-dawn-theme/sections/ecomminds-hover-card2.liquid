
{{ 'collection-discovery.css' | asset_url | stylesheet_tag }}
<script src="{{ 'collection-discovery.js' | asset_url }}" defer="defer"></script>

<section id="ecomminds-collection-section">
  <div class="ecomminds-container">
    <div class="ecomminds-grid">
      <div class="large-up--one-third xlarge-up--one-quarter">
        <div class="category-card-nav">
          <p class="subhead--large-regular">{{ section.settings.subheading }}</p>
          <h3 class="heading--large-regular">{{ section.settings.heading }}</h3>
          <a
            href="{{ section.settings.button_url }}"
            class="ecomminds-button button--border gradient-border card-figcaption-button cta--small small-down--hide"
          >
            <span>{{ section.settings.button }}</span>
          </a>
        </div>
      </div>

      <div class="large-up--two-thirds xlarge-up--three-quarters">
        <!-- dektop code -->
      
        <div class="category-card-grid small-down--hide">
          {% for block in section.blocks %}
            <div class="category-card module module-article article">
              <div
                class="category-card__image opacity lazyloaded"
                data-bg="{{ block.settings.card_image|img_url:"master" }}"
                alt="{{ block.settings.card_heading }}"
                role="presentation"
                style="background-image: url({{ block.settings.card_image|img_url:"original" }});"
              ></div>
              <div class="ecomminds-header">
                <p class="subhead--large-medium">{{ block.settings.card_heading }}</p>
                <a
                  href="{{ block.settings.collection.url }}"
                  class="ecomminds-button button--border gradient-border cta--small"
                >
                  <span>{{ block.settings.card_button }}</span>
                </a>
              </div>
            </div>
          {% endfor %}
          
        </div>
        <!-- end desktop code -->

        <!-- mobile code -->
        <section class="ecomminds-slider medium-up--hide">
          <div class="content">
            <div class="swiper swiper-cards">
              <div class="swiper-wrapper">
                {% for block in section.blocks %}
                  <div class="swiper-slide">
                    <img src="{{ block.settings.card_image|img_url:"medium" }}" alt="{{ block.settings.card_heading }}" width="100%" height="100%">
                    <div class="ecomminds-card">
                      <div class="ecomminds-card-title">
                        <p class="subhead--large-medium">{{ block.settings.card_heading }}</p>
                        <a
                          href="{{ block.settings.collection.url }}"
                          class="ecomminds-button button--border gradient-border cta--small"
                        >
                          <span>{{ block.settings.card_button }}</span>
                        </a>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </section>
        <!-- end mobile code -->
      </div>
    </div>
    <a
      href="{{ section.settings.button_url }}"
      class="ecomminds-button button--border gradient-border card-figcaption-button medium-up--hide"
    >
      <span class="">{{ section.settings.button }}</span>
    </a>
  </div>
</section>

