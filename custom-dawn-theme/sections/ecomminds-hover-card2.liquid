{% style %}
    /* css with liquid settings */
        #ecomminds-collection-section .category-card-nav .subhead--large-regular,#ecomminds-collection-section .subhead--large-medium{
            font-size:{{ section.settings.font_size_subheading }}px;
            font-weight:{{ section.settings.font-weight_subheading }};
            margin: 0 0px 10px 0;
          }
        #ecomminds-collection-section .category-card-nav .heading--large-regular{
            font-size:{{ section.settings.font_size_heading }}px;
            font-weight:{{ section.settings.font-weight_heading }};
            margin: 0 0px 10px 0;
          }
        #ecomminds-collection-section .ecomminds-button{
            font-size:{{ section.settings.font_size_button }}px;
            font-weight:{{ section.settings.font-weight_button }};
            margin: 0 0px 10px 0;
         }
        #ecomminds-collection-section .category-card-grid::-webkit-scrollbar {
            width: {{ section.settings.width_Scrollbar }}px;
         }
        #ecomminds-collection-section .category-card-grid::-webkit-scrollbar-track {
            background: transparent;
         }
        #ecomminds-collection-section .category-card-grid::-webkit-scrollbar-thumb {
            background: {{ section.settings.Scrollbar_color }};
            border-radius: {{ section.settings.radius_Scrollbar }}px;
         }
        #ecomminds-collection-section .category-card-grid::-webkit-scrollbar-thumb:hover {
            background: {{ section.settings.Scrollbar_color_hover }};
         }
      #ecomminds-collection-section .ecomminds-button.button--border{
          color:{{ section.settings.buttons_color }};
          line-height: 46px;
          z-index: 1;
          text-decoration: none;
        }
      .ecomminds-button.button--border.gradient-border:hover span{
        color: {{ section.settings.buttons_color_hover }}; !important;
      }
      .ecomminds-header .subhead--large-medium {
        color:{{ section.settings.slider_card_text_color }};
    }

  /* end css with liquid settings */
{% endstyle %}
